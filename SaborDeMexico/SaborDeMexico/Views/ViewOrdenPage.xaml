<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:magic="http://magic.com/schemas/gradients" xmlns:model="clr-namespace:SaborDeMexico.Models" xmlns:local="clr-namespace:SaborDeMexico.ViewModels"
             x:Class="SaborDeMexico.Views.ViewOrdenPage">
    <ContentPage.Content>


            <ScrollView VerticalOptions="FillAndExpand">
                <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"  ></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.RowSpan="4" VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" ></RowDefinition>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" ></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <magic:GradientView Grid.Column="0" Grid.Row="0">
                            <magic:CssGradientSource>
                                <x:String>
                                    <![CDATA[
 linear-gradient(246deg, rgba(234, 234, 234, 0.04) 0%, rgba(234, 234, 234, 0.04) 33.3%,rgba(69, 69, 69, 0.04) 33.3%, rgba(69, 69, 69, 0.04) 66.6%,rgba(189, 189, 189, 0.04) 66.6%, rgba(189, 189, 189, 0.04) 99.89999999999999%),linear-gradient(81deg, rgba(126, 126, 126, 0.05) 0%, rgba(126, 126, 126, 0.05) 33.3%,rgba(237, 237, 237, 0.05) 33.3%, rgba(237, 237, 237, 0.05) 66.6%,rgba(74, 74, 74, 0.05) 66.6%, rgba(74, 74, 74, 0.05) 99.89999999999999%),linear-gradient(14deg, rgba(3, 3, 3, 0.08) 0%, rgba(3, 3, 3, 0.08) 33.3%,rgba(156, 156, 156, 0.08) 33.3%, rgba(156, 156, 156, 0.08) 66.6%,rgba(199, 199, 199, 0.08) 66.6%, rgba(199, 199, 199, 0.08) 99.89999999999999%),linear-gradient(323deg, rgba(82, 82, 82, 0.06) 0%, rgba(82, 82, 82, 0.06) 33.3%,rgba(179, 179, 179, 0.06) 33.3%, rgba(179, 179, 179, 0.06) 66.6%,rgba(212, 212, 212, 0.06) 66.6%, rgba(212, 212, 212, 0.06) 99.89999999999999%),linear-gradient(32deg, rgba(70, 70, 70, 0.02) 0%, rgba(70, 70, 70, 0.02) 33.3%,rgba(166, 166, 166, 0.02) 33.3%, rgba(166, 166, 166, 0.02) 66.6%,rgba(53, 53, 53, 0.02) 66.6%, rgba(53, 53, 53, 0.02) 99.89999999999999%),linear-gradient(38deg, rgba(129, 129, 129, 0.09) 0%, rgba(129, 129, 129, 0.09) 33.3%,rgba(38, 38, 38, 0.09) 33.3%, rgba(38, 38, 38, 0.09) 66.6%,rgba(153, 153, 153, 0.09) 66.6%, rgba(153, 153, 153, 0.09) 99.89999999999999%),linear-gradient(63deg, rgba(51, 51, 51, 0.02) 0%, rgba(51, 51, 51, 0.02) 33.3%,rgba(12, 12, 12, 0.02) 33.3%, rgba(12, 12, 12, 0.02) 66.6%,rgba(158, 158, 158, 0.02) 66.6%, rgba(158, 158, 158, 0.02) 99.89999999999999%),linear-gradient(227deg, rgba(63, 63, 63, 0.03) 0%, rgba(63, 63, 63, 0.03) 33.3%,rgba(9, 9, 9, 0.03) 33.3%, rgba(9, 9, 9, 0.03) 66.6%,rgba(85, 85, 85, 0.03) 66.6%, rgba(85, 85, 85, 0.03) 99.89999999999999%),linear-gradient(103deg, rgba(247, 247, 247, 0.07) 0%, rgba(247, 247, 247, 0.07) 33.3%,rgba(93, 93, 93, 0.07) 33.3%, rgba(93, 93, 93, 0.07) 66.6%,rgba(208, 208, 208, 0.07) 66.6%, rgba(208, 208, 208, 0.07) 99%),linear-gradient(0deg, #0b91d7,#6efc29)       ]]>
                                </x:String>
                            </magic:CssGradientSource>
                        </magic:GradientView>
                    </Grid>
                    <StackLayout BackgroundColor="Transparent" Grid.Row="0" VerticalOptions="Start" HorizontalOptions="Center">

                        <Grid HorizontalOptions="Center" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80" ></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="30"></RowDefinition>


                            </Grid.RowDefinitions>
                            <magic:GradientView Margin="10,40,10,10" Grid.RowSpan="4" TranslationY="35" >
                                <magic:GradientView.Mask>
                                    <magic:RectangleMask Size="95%" Corners="10,10,10,10" />
                                </magic:GradientView.Mask>
                                <magic:CssGradientSource>
                                    <x:String>
                                        <![CDATA[
                repeating-linear-gradient(135deg, hsla(35,0%,71%,0.09) 0px, hsla(35,0%,71%,0.09) 1px,transparent 1px, transparent 11px),repeating-linear-gradient(45deg, hsla(35,0%,71%,0.09) 0px, hsla(35,0%,71%,0.09) 1px,transparent 1px, transparent 11px),linear-gradient(90deg, hsl(183,0%,100%),hsl(183,0%,100%)
            ]]>
                                    </x:String>
                                </magic:CssGradientSource>
                            </magic:GradientView>
                            <Label Grid.Row="1" Margin="0,10,0,0" Text="{Binding Estatus}" HorizontalOptions="Center" />
                            <Label Grid.Row="2" Text="{Binding IdOrden,StringFormat='Orden Num: {0}'}" HorizontalOptions="Center"  />
                            <Label Grid.Row="3" Text="{Binding Envio,StringFormat='Costo de envío: {0}'}" HorizontalOptions="Center"  />
                            <Label Grid.Row="4" Text="{Binding Total,StringFormat='Total: {0}'}" HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="Start" Margin="0,0,10,0"  />
                            <Frame CornerRadius="10"  Grid.Row="0" Grid.RowSpan="1" TranslationY="10"
           HeightRequest="70"
           WidthRequest="70"
           HorizontalOptions="Center"
           Padding="0"
           IsClippedToBounds="True">
                                <Image Grid.Row="0" Grid.RowSpan="2" Source="LogoS" HorizontalOptions="Center" TranslationY="0" HeightRequest="70" WidthRequest="70"/>
                            </Frame>
                        </Grid>

                    </StackLayout>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" ></RowDefinition>
                            <RowDefinition Height="250"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" ></ColumnDefinition>
                            <ColumnDefinition Width="auto" ></ColumnDefinition>
                            <ColumnDefinition Width="20" ></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.RowSpan="3" Grid.ColumnSpan="3" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" ></RowDefinition>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" ></ColumnDefinition>

                            </Grid.ColumnDefinitions>
                            <magic:GradientView Grid.Column="0" Grid.Row="0" Margin="20,0,20,5">
                                <magic:GradientView.Mask>
                                    <magic:RectangleMask Size="100%" Corners="10,10,10,10" />
                                </magic:GradientView.Mask>
                                <magic:CssGradientSource>
                                    <x:String>
                                        <![CDATA[
               repeating-linear-gradient(135deg, hsla(35,0%,71%,0.09) 0px, hsla(35,0%,71%,0.09) 1px,transparent 1px, transparent 11px),repeating-linear-gradient(45deg, hsla(35,0%,71%,0.09) 0px, hsla(35,0%,71%,0.09) 1px,transparent 1px, transparent 11px),linear-gradient(90deg, hsl(183,0%,100%),hsl(183,0%,100%)
            ]]>
                                    </x:String>
                                </magic:CssGradientSource>
                            </magic:GradientView>
                        </Grid>
                        <Label Grid.Row="0" Margin="15,15,15,0" Grid.Column="1" Text="Lista" VerticalOptions="End" FontAttributes="Bold"></Label>


                        <CollectionView  Grid.Row="1" Margin="10,0,10,5" Grid.Column="1" x:Name="List"
                ItemsSource="{Binding ListCarritos}"
                SelectionMode="None">
                                <CollectionView.ItemTemplate >
                                    <DataTemplate>
                                        <StackLayout  Padding="10" x:DataType="model:ModelDetalleOrden">


                                            <StackLayout Orientation="Horizontal" BackgroundColor="Transparent">

                                                <Label Text="{Binding Plato,StringFormat='Cantidad: {0}'}" 
                            LineBreakMode="CharacterWrap" 
                           
                            FontSize="16" />



                                            </StackLayout>

                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                            
                        <Image Grid.Row="2" Grid.ColumnSpan="3" Margin="15,15,15,0" Source="pago"/>

                    </Grid>

                    <Grid Grid.Row="3" ColumnDefinitions="*,*" Padding="15">
                       <Button Grid.Column="0"  Command="{Binding BackCommand}" ImageSource="Arrow" Text="Salir" TextColor="Black" FontAttributes="Bold" BackgroundColor="#e4e4e4" CornerRadius="10" HeightRequest="50" Margin="10,5,10,20"/>

                    </Grid>

                </Grid>
            </ScrollView>

    </ContentPage.Content>
</ContentPage>